<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="horizontal"
android:padding="40dp"
android:background="@drawable/selva"
tools:context=".animales">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0">

        <Button
            android:id="@+id/btnTigre"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/btn_tigre"
            android:drawableBottom="@drawable/icons8_tiger_64"
            android:onClick="tonoTigre"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnMono"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnMono"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/btn_mono"
            android:drawableBottom="@drawable/icons8_monkey_face_64"
            android:onClick="tonoMono"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnGallina"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/btnGallina"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/btn_gallina"
            android:drawableBottom="@drawable/icons8_chicken_64"
            android:onClick="tonoGallina"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnVaca"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/btnVaca"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/btn_vaca"
            android:drawableBottom="@drawable/icons8_cow_64"
            android:onClick="tonoVaca"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/btnPerro"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/btn_perro"
            android:drawableBottom="@drawable/icons8_dog_64"
            android:onClick="tonoPerro"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnVaca"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/btnGato"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/btn_gato"
            android:drawableBottom="@drawable/icons8_cat_64"
            android:onClick="tonoGato"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnPerro"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/btnElefante"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/btn_elefante"
            android:drawableBottom="@drawable/icons8_elephant_64"
            android:onClick="tonoElefante"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnGato"
            app:layout_constraintTop_toTopOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/linea_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <Button
            android:id="@+id/btnDoSos"
            android:layout_width="58dp"
            android:layout_height="140dp"
            android:layout_marginEnd="32dp"
            android:background="#000000"
            app:layout_constraintEnd_toStartOf="@id/btnReSos"
            app:layout_constraintTop_toTopOf="parent"  />

        <Button
            android:id="@+id/btnReSos"
            android:layout_width="58dp"
            android:layout_height="140dp"
            android:layout_marginEnd="102dp"
            android:background="#000000"
            app:layout_constraintEnd_toStartOf="@id/linea_vertical"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnFaSos"
            android:layout_width="58dp"
            android:layout_height="140dp"
            android:layout_marginStart="16dp"
            android:background="#000000"
            app:layout_constraintStart_toEndOf="@id/linea_vertical"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnLaSos"
            android:layout_width="58dp"
            android:layout_height="140dp"
            android:layout_marginStart="31dp"
            android:background="#000000"
            app:layout_constraintStart_toEndOf="@id/btnFaSos"
            app:layout_constraintTop_toTopOf="parent"  />

        <Button
            android:id="@+id/btnSolSos"
            android:layout_width="58dp"
            android:layout_height="140dp"
            android:layout_marginStart="30dp"
            android:background="#000000"
            app:layout_constraintStart_toEndOf="@id/btnLaSos"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


